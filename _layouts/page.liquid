---
layout: default
---
<article {% if page.feature-img or page.color %}class="feature-image" {% endif %} style="
    /* Subtle fantasy map / parchment pattern behind content */
    background-image: url('https://upload.wikimedia.org/wikipedia/commons/5/5a/Antique_map_background.jpg');
    background-size: cover;
    background-position: center;
    padding: 40px 20px;
">

    <!-- Header area with darkened fantasy style -->
    <header id="main" style="
        background-image: url('{{ page.feature-img | relative_url }}');
        background-size: cover;
        background-position: center;
        padding: 25px 0;
        text-align:center;
    ">
        <div class="title-padder">
            {% if page.hide_title %}
                <div class="feature-image-padding"></div>
            {% else %}
                <!-- Fantasy-styled clickable main title -->
                <a href="{{ page.url | relative_url }}" style="text-decoration:none;">
                    <h1 id="{{ page.title | cgi_escape }}" class="title" style="
                        color: #f0e6d2;
                        text-shadow: 2px 2px 5px #000;
                        background: rgba(60,31,26,0.7);
                        display: inline-block;
                        padding: 10px 20px;
                        border-radius: 6px;
                        margin-bottom: 10px;
                        cursor: pointer;
                        transition: box-shadow 0.3s ease, transform 0.2s ease;
                    " onmouseover="this.style.boxShadow='0 0 20px rgba(255,215,0,0.8)'; this.style.transform='translateY(-3px)';" onmouseout="this.style.boxShadow='none'; this.style.transform='translateY(0)';">
                        {{ page.title }}
                    </h1>
                </a>                 
                </div>
            {% endif %}
        </div>
    </header>

    <!-- Post content with parchment + burnt border -->
    <section class="post-content">
      <div style="
          position: relative;
          padding: 32px;
          color: #2a1a0e; /* Dark readable text */
          background: #f5e6c6; /* lighter parchment base */
          background-image: url('https://upload.wikimedia.org/wikipedia/commons/6/6a/Parchment_background.jpg');
          background-size: cover;
          border: 8px solid #4a190f; /* burnt brown-red border */
          border-radius: 12px;
          box-shadow:
            0 0 12px rgba(0,0,0,0.45),
            inset 0 0 35px rgba(0,0,0,0.5);
          line-height: 1.7;
      ">

        <!-- Burned corners glow -->
        <div style="
            content:'';
            position:absolute;
            inset:-6px;
            border-radius:14px;
            pointer-events:none;
            background:
              radial-gradient(circle at top left, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at top right, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at bottom left, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at bottom right, rgba(0,0,0,0.35), transparent 60%);
            filter: blur(7px);
            z-index:0;
        "></div>

        <!-- Fantasy Markdown Headers -->
        <style>
          .post-content h1,
          .post-content h2,
          .post-content h3,
          .post-content h4 {
            background: rgba(60,31,26,0.6);
            color: #f9e7c2;
            text-shadow: 1px 1px 4px black;
            padding: 4px 12px;
            border-radius: 6px;
            margin-top: 26px;
            display:inline-block;
            transition: box-shadow 0.3s ease, transform 0.2s ease;
          }

          /* Hover effect for headers */
          .post-content h1:hover,
          .post-content h2:hover,
          .post-content h3:hover,
          .post-content h4:hover {
            box-shadow: 0 0 20px rgba(255,215,0,0.8);
            transform: translateY(-2px);
          }

          /* Hover effect for links inside content */
          .post-content a {
            color: #4a2d10;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.2s, text-shadow 0.3s, transform 0.2s;
          }
          .post-content a:hover {
            color: #000;
            text-shadow: 0 0 12px rgba(255,215,0,0.8);
            transform: translateY(-2px);
          }
        </style>

        {% if page.bootstrap %}<div class="bootstrap-iso">{% endif %}
            {{ content }}
        {% if page.bootstrap %}</div>{% endif %}
      </div>
    </section>

</article>

<!-- ✅ Minimal Footer With Logo -->
<footer style="
    margin-top: 50px;
    text-align: center;
    padding: 25px 10px;
    color: #ccb89a;
    font-size: 14px;
    opacity: 0.9;
    background: #3b1f1a; /* distinct dark footer */
">
    <div style="margin-bottom: 12px;">
        <!-- Replace the src with your own logo -->
        <img src="/assets/img/Gur1.png" alt="Site logo" style="height:80px;">
    </div>
    <div>&copy; {{ site.time | date: "%Y" }} {{ site.title }} — All rights reserved.</div>
</footer>
