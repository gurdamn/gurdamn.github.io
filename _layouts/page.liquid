---
layout: default
---
<article {% if page.feature-img %}class="feature-image"{% endif %}>

    <!-- HEADER WITH FANTASY TITLE/SUBTITLE -->
    <header id="main" style="
        background-image: url('{{ page.feature-img | relative_url }}');
        background-size: cover;
        background-position: center;
        padding: 30px 0;
        text-align:center;
    ">
        <div class="title-padder">

            {% if page.hide_title %}
                <div class="feature-image-padding"></div>
            {% else %}
                <!-- Title -->
                <h1 style="
                    color: #f0e6d2;
                    text-shadow: 2px 2px 5px #000;
                    background: rgba(60,31,26,0.65);
                    display: inline-block;
                    padding: 10px 18px;
                    border-radius: 6px;
                    margin-bottom: 10px;
                ">
                    {{ page.title }}
                </h1>

                {% if page.subtitle %}
                <h2 style="
                    color: #f5e7c1;
                    text-shadow: 1px 1px 4px #000;
                    background: rgba(60,31,26,0.50);
                    display: inline-block;
                    padding: 6px 14px;
                    border-radius: 6px;
                    margin-top: 5px;
                ">
                    {{ page.subtitle }}
                </h2>
                {% endif %}
            {% endif %}

        </div>
    </header>

    <!-- FANTASY PARCHMENT CONTENT AREA -->
    <section class="post-content">
        <div style="
            position: relative;
            padding: 32px;
            background: #f5e6c6;
            background-image: url('https://upload.wikimedia.org/wikipedia/commons/6/6a/Parchment_background.jpg');
            background-size: cover;
            color: #2a1a0e; /* readable dark text */
            border: 8px solid #4a190f; /* burnt brown-red frame */
            border-radius: 12px;
            box-shadow:
              0 0 18px rgba(0,0,0,0.55),
              inset 0 0 35px rgba(0,0,0,0.5);
            line-height: 1.7;
        ">

            <!-- SINGED CORNER GLOW -->
            <div style="
                content:'';
                position:absolute;
                inset:-6px;
                pointer-events:none;
                border-radius:14px;
                background:
                  radial-gradient(circle at top left, rgba(0,0,0,0.45), transparent 60%),
                  radial-gradient(circle at top right, rgba(0,0,0,0.45), transparent 60%),
                  radial-gradient(circle at bottom left, rgba(0,0,0,0.45), transparent 60%),
                  radial-gradient(circle at bottom right, rgba(0,0,0,0.45), transparent 60%);
                filter: blur(8px);
            "></div>

            <!-- Auto-fantasy Markdown header styling -->
            <style>
                .post-content h1,
                .post-content h2,
                .post-content h3,
                .post-content h4 {
                    background: rgba(60,31,26,0.55);
                    color: #f9e7c2;
                    text-shadow: 1px 1px 4px black;
                    padding: 4px 12px;
                    border-radius: 6px;
                    margin-top: 22px;
                    display: inline-block;
                }
            </style>

            {% if page.bootstrap %}
                <div class="bootstrap-iso">
            {% endif %}

            {{ content }}

            {% if page.bootstrap %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- TAG LIST -->
    {% capture tag_list %}{{ page.tags | join: "|" }}{% endcapture %}
    {% capture _tags %}{% include default/tags_list.liquid tags=tag_list %}{% endcapture %}
    {{ _tags | split: " " | join: " " }}

</article>


<!-- PORTFOLIO GRID WITH SCROLL TITLES -->
<div style="
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 28px;
    margin-top: 40px;
    padding: 10px;
">
    {% for item in site.portfolio %}
    <div style="text-align:center;">

        <!-- Scroll Title -->
        <div style="
            background: #f4e7c1;
            border: 3px solid #b89a63;
            border-radius: 10px;
            padding: 8px 12px;
            display: inline-block;
            font-family: 'Cinzel', serif;
            font-weight: bold;
            font-size: 1.15rem;
            color: #4a2d10;
            margin-bottom: 10px;
            position: relative;
        ">

            <!-- Scroll ends -->
            <span style="
                position:absolute; left:-14px; top:50%;
                width:10px; height:32px; background:#b89a63;
                border-radius:4px;
                transform:translateY(-50%);
            "></span>
            <span style="
                position:absolute; right:-14px; top:50%;
                width:10px; height:32px; background:#b89a63;
                border-radius:4px;
                transform:translateY(-50%);
            "></span>

            <a href="{{ item.url | relative_url }}"
               style="text-decoration:none; color:#4a2d10;"
               onmouseover="this.style.color='#000'"
               onmouseout="this.style.color='#4a2d10'"
            >
                {{ item.title }}
            </a>
        </div>

        <a href="{{ item.url | relative_url }}">
            <img src="{{ item.img | relative_url }}"
                 alt="{{ item.title }}"
                 style="width:100%; border-radius:6px; box-shadow:0 0 12px rgba(0,0,0,0.5);">
        </a>
    </div>
    {% endfor %}
</div>
