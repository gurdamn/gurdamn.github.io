---
layout: default
---
<article {% if page.feature-img or page.color %}class="feature-image" {% endif %}>

    <!-- Header with clickable title and fantasy styling -->
    <header id="main" style="
        background-image: url('{{ page.feature-img | relative_url }}');
        background-size: cover;
        background-position: center;
        padding: 25px 0;
        text-align:center;
    ">
        <div class="title-padder">

            {% if page.hide_title %}
                <div class="feature-image-padding"></div>
            {% else %}
                <a href="{{ page.url | relative_url }}" style="
                    text-decoration:none;
                ">
                    <h1 id="{{ page.title | cgi_escape }}" class="title" style="
                        color: #f0e6d2;
                        text-shadow: 2px 2px 5px #000;
                        background: rgba(60,31,26,0.7);
                        padding: 10px 20px;
                        border-radius: 6px;
                        margin-bottom: 10px;
                        display:inline-block;
                        cursor:pointer;
                    ">
                    {{ page.title }}
                    </h1>
                </a>

                <div style="
                    background: rgba(60,31,26,0.5);
                    color: #e9d7b5;
                    display: inline-block;
                    padding: 6px 12px;
                    border-radius: 6px;
                    text-shadow: 1px 1px 3px #000;
                ">
                    {% include blog/post_info.liquid author=page.author date=page.date last_modified=page.last_modified %}
                </div>
            {% endif %}
        </div>
    </header>

    <!-- Post content with parchment + burned border -->
    <section class="post-content">
      <div style="
          position: relative;
          padding: 32px;
          color: #2a1a0e; /* Dark readable text */
          background: #f5e6c6; /* lighter parchment base */
          background-image: url('https://upload.wikimedia.org/wikipedia/commons/6/6a/Parchment_background.jpg');
          background-size: cover;
          border: 8px solid #4a190f; /* burnt brown-red border */
          border-radius: 12px;
          box-shadow:
            0 0 12px rgba(0,0,0,0.45),
            inset 0 0 35px rgba(0,0,0,0.5);
          line-height: 1.7;
      ">

        <!-- Burned irregular singe effect -->
        <div style="
            content:'';
            position:absolute;
            inset:-6px;
            border-radius:14px;
            pointer-events:none;
            background:
              radial-gradient(circle at top left, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at top right, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at bottom left, rgba(0,0,0,0.35), transparent 60%),
              radial-gradient(circle at bottom right, rgba(0,0,0,0.35), transparent 60%);
            filter: blur(7px);
            z-index:0;
        "></div>

        <!-- Fantasy Markdown Headers -->
        <style>
          .post-content h1,
          .post-content h2,
          .post-content h3,
          .post-content h4 {
            background: rgba(60,31,26,0.6);
            color: #f9e7c2;
            text-shadow: 1px 1px 4px black;
            padding: 4px 12px;
            border-radius: 6px;
            margin-top: 26px;
            display:inline-block;
          }
        </style>

        {% if page.bootstrap %}<div class="bootstrap-iso">{% endif %}
            {{ content }}
        {% if page.bootstrap %}</div>{% endif %}
      </div>
    </section>

    <!-- Social share -->
    <div style="margin-top:25px; text-align:center;">
      {% include social/share_buttons.liquid %}
    </div>

    <!-- Tag list -->
    <div style="margin-top:20px;">
      {% capture tag_list %}{{ page.tags | join: "|" }}{% endcapture %}
      {% include default/tags_list.liquid tags=tag_list %}
    </div>
</article>

{% include blog/post_footer.liquid color=page.color img=page.feature-img %}
